# Macros
# P  -  Record prefix, e.g. caTools-TEST


record(calc, "$(P):TEST_1") {
	field(VAL,"0")
	field(INPA,"$(P):TEST_1")
	field(CALC,"A+0.1")
	field(SCAN,".1 second")
}

record(ai, "$(P):TEST_1-AI"){
	field(INP, "$(P):TEST_1")
	field(SCAN,".1 second")
	field(EGU, "ds")
}

record(calc, "$(P):CALC"){
	field(INPA, "$(P):CALC")
	field(CALC, "A+1")
	field(VAL,  "1")
}

record(calcout, "$(P):CALC_BI"){
	field(SCAN, "1 second")
	field(INPA, "$(P):TEST_1-BI")
	field(CALC, "!A")
	field(OUT, "$(P):TEST_1-BI PP")
}

record(bi, "$(P):TEST_1-BI"){
	field(VAL,  "1")
	field(ONAM, "On")
	field(ZNAM, "Off")
	field(ZSV,  "NO_ALARM")
	field(OSV,  "MINOR")
}

record(longin, "$(P):TEST_1-LI"){
	field(INP, "$(P):TEST_1")
	field(SCAN,".1 second")
}

